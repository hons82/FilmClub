<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/review_vertical_padding"
    android:paddingBottom="@dimen/review_vertical_padding"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorReviewAuthor"
        android:textSize="@dimen/tv_review_author_text_size"
        android:background="@color/backgroundReviewAuthor"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="@dimen/tv_review_content_text_size"
        android:textColor="@color/colorReviewContent"
        tools:text="Lorem ipsum" />

</LinearLayout>