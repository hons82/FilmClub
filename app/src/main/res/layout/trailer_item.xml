<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/trailer_horizontal_padding"
    android:layout_marginTop="@dimen/trailer_vertical_padding"
    android:layout_marginBottom="@dimen/trailer_vertical_padding"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_trailer_thumbnail"
        android:layout_width="@dimen/iv_trailer_width"
        android:layout_height="@dimen/iv_trailer_height"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_trailer_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play" />

</FrameLayout>